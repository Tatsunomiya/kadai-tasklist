<ul class="list-unstyled">
  <% @tasks.each do |task| %>
    <li class="media mb-3">
      <div class="media-body">
        <div>
          <%= link_to task.content, task_path(task) %> <span class="text-muted">posted at <%= task.created_at %></span>
        </div>
        <div>
           <p></p>
          <p><%= task.status %></p>
          <p><%= task.content %></p>
        </div>
        <div>
            <%= link_to "Edit", edit_task_path(task),   class: 'btn btn-danger btn-sm' %>
            <%= link_to "Delete", task, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
        <% end %>
      </div>
      </div>
    </li>
  <% end %>
  <%= paginate task %>
</ul>
<% end %>